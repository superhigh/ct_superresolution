<div class="container">
  <div class="row">
    <div class="span6 offset2">
      <div class="login">
        <form class="form-horizontal"  action="doLogin" method="post"/>
          <div class="control-group">
            <div class="controls">
              <h4>Login</h4>
            </div>
          </div>
          <div class="control-group">
            <label for="inputEmail" class="control-label">Email </label>
            <div class="controls">
              <input id="inputEmail" type="text" placeholder="Email" name="email" />
            </div>
          </div>
          <div class="control-group">
            <label for="inputPassword" class="control-label">Password </label>
            <div class="controls">
              <input name="password" type="password" placeholder="Password" />
            </div>
          </div>
          <div class="control-group"> 
            <div class="controls"><input  type="submit" class="btn" value="Login"></input><a href="register">  Sign up</a></div>
			
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
	
